<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_customToast"
    android:layout_width="275dp"
    android:layout_height="125dp"
    android:background="@drawable/ic_rectangle_round_corners_c300"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

       <ImageView
           android:id="@+id/imageView_customToast"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="12dp"
           android:scaleY="0.6"
           android:scaleX="0.6"
           android:src="@drawable/ic_alert"
           android:importantForAccessibility="no" />

       <TextView
           android:id="@+id/textView_customToast"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:textAlignment="center"
           android:text="testeeeee"
           android:fontFamily="@font/nunito_sans_extra_bold_compat"
           android:textColor="@color/color_1000"
           android:textSize="16sp"
           android:textStyle="bold" />


</LinearLayout>