<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_200"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_rowView7daysIconForecast"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_clear_day"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toStartOf="@+id/textView_rowView7daysTempForecast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_rowView7daysTempForecast"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:text="29ยบ"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_rowView7daysIconForecast"
        app:layout_constraintEnd_toStartOf="@+id/textView_rowView7daysTitleForecast"
        app:layout_constraintStart_toEndOf="@+id/imageView_rowView7daysIconForecast"
        app:layout_constraintTop_toTopOf="@+id/imageView_rowView7daysIconForecast" />

    <TextView
        android:id="@+id/textView_rowView7daysTitleForecast"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="Moday"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView_rowView7daysTempForecast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_rowView7daysTempForecast"
        app:layout_constraintTop_toTopOf="@+id/textView_rowView7daysTempForecast" />

    <TextView
        android:id="@+id/textView_rowView7daysDateForecast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:text="9 March 2021"
        android:textColor="@color/color_900"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_rowView7daysTitleForecast"
        app:layout_constraintStart_toEndOf="@+id/textView_rowView7daysTempForecast"
        app:layout_constraintTop_toBottomOf="@+id/textView_rowView7daysTitleForecast" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@color/color_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_rowView7daysDateForecast"
        app:layout_constraintStart_toStartOf="@+id/imageView_rowView7daysIconForecast"
        app:layout_constraintTop_toBottomOf="@+id/imageView_rowView7daysIconForecast" />

</androidx.constraintlayout.widget.ConstraintLayout>