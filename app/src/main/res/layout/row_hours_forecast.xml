<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_mini"
    android:layout_marginTop="55dp"
    android:layout_marginEnd="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_rowViewHoursForecast"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:hint="00:00 AM"
            android:textAlignment="center"
            android:textColor="@color/color_200"
            android:textColorHint="@color/color_200"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_rowViewIconForecast"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/ic_clear_day"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@+id/textView_rowViewTemperatureForecast"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_rowViewHoursForecast" />

        <TextView
            android:id="@+id/textView_rowViewTemperatureForecast"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:hint="35ÂºC"
            android:textAlignment="center"
            android:textColor="@color/color_200"
            android:textColorHint="@color/color_200"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_rowViewIconForecast" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>